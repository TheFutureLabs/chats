{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "lib",
		"declaration": true,
		"sourceMap": false,
		"allowJs": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
        "types": ["node"]
	},
	"compileOnSave": true,
	"include": ["src"],
	"exclude": ["node_modules"]
}
